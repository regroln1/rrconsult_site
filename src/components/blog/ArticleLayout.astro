---
import BaseLayout from "@components/base/BaseLayout.astro";
import { Markdown } from "astro/components";
import type { AstroComponentFactory } from "astro";

export interface Props {
  title: string;
  date: string;
  image: string;
  imageAlt?: string;
  description?: string;
}

const { title, date, image, imageAlt = "", description = "" } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <article class="max-w-3xl mx-auto py-12 px-4">
    {image && (
      <img src={image} alt={imageAlt} class="mb-8 w-full h-auto rounded-lg" />
    )}

    <h1 class="text-4xl font-bold mb-2 text-accent-copper">{title}</h1>
    <p class="text-sm text-light-cream mb-6">Publi√© le {date}</p>

    <Markdown class="prose prose-lg prose-invert">
      <slot />
    </Markdown>
  </article>
</BaseLayout>
