---
const { pathname } = Astro.url;

const stickyHeader = true;

const menu = [
  { name: "Accueil", url: "/" },
  { name: "À propos", url: "/about" },
  { name: "Blog", url: "/blog" },
  { name: "La méthode AIA", url: "/la-methode-aia" },
  { name: "Ressources", url: "/ressources" },
  { name: "Travailler avec moi", url: "https://TON-LIEN-SUITEDASH-TRAVAILLER", external: true },
];

const espaceClientUrl = "https://acces.regisrolnin.com/";
---

<header
  transition:persist
  class={`container glass border border-transparent bg-opacity-10 py-3 z-30 mb-4 lg:mt-4 lg:rounded-lg ${stickyHeader && "sticky top-0"}`}
>
  <nav class="relative flex flex-wrap items-center justify-between">
    <!-- menu mobile toggle -->
    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      for="nav-toggle"
      class="order-0 cursor-pointer flex items-center md:hidden text-light-cream lg:order-1"
    >
      <svg id="show-button" class="h-6 fill-current block" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
      <svg id="hide-button" class="h-6 fill-current hidden" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2" transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>

    <!-- menu -->
    <ul
      id="nav-menu"
      class="text-center lg:text-left order-3 hidden w-full pb-6 md:order-1 md:flex md:w-auto md:space-x-4 md:pb-0 lg:space-x-6"
    >
      {
        menu.map((item) => (
          <li>
            <a
              href={item.url}
              target={item.external ? "_blank" : "_self"}
              rel={item.external ? "noopener noreferrer" : ""}
              class={`block px-4 py-3 text-lg font-secondary font-semibold text-light-cream transition hover:text-accent-copper ${
                (pathname === `${item.url}/` || pathname === item.url) && "text-accent-copper"
              }`}
            >
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- espace client bouton -->
    <div class="order-1 ml-auto flex items-center md:order-2 lg:ml-0 space-x-6">
      <div class="hidden md:block h-5 w-px bg-accent-copper-light opacity-50"></div>
      <a
  href={espaceClientUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="btn-blue-secondary btn-medium"
>
  Espace client
</a>

    </div>
  </nav>
</header>
