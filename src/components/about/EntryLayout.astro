---
import BaseLayout from "@components/base/BaseLayout.astro";
import PageHeader from "@components/common/PageHeader.astro";
import { markdownify } from "@lib/textConverter";
import { Image } from "astro:assets";
import type { AboutEntry } from "@/types";
import { render } from "astro:content";

interface Props {
  entry: AboutEntry;
}

const { entry } = Astro.props;
const { title, description, image, imageAlt } = entry.data;
const { Content } = await render(entry);
---

<BaseLayout title={title} description={description} image={image?.src}>
  <PageHeader title={title} />
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-10 lg:col-8">
          {
            image && (
              <div class="mb-8 text-center">
                <Image
                  class="mx-auto rounded-lg w-48 h-48 object-cover"
                  src={image}
                  alt={imageAlt}
                  width={400}
                  height={400}
                  loading="eager"
                />
              </div>
            )
          }
          <div class="content glass rounded-lg p-6 lg:p-8">
            <Content />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>