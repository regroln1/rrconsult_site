---
import BaseLayout from "@components/base/BaseLayout.astro";
import { markdownify } from "@lib/textConverter";
import Button from "@components/common/Button.astro";
import type { HomeEntry } from "@/types";
import { Image } from "astro:assets";

interface Props {
  entry: HomeEntry;
}

const { entry } = Astro.props;
const { image, imageAlt, title, content, buttons } = entry.data;
---

<BaseLayout>
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="text-center lg:col-6">
          {
            image && (
              <div class="blur-[0px] mb-6">
                <Image
                  class="w-64 mx-auto"
                  src={image}
                  alt={imageAlt}
                  width={1024}
                  height={1024}
                  loading="eager"
                />
              </div>
            )
          }

          <section class="section py-20 text-center text-light-cream min-h-screen flex items-center justify-center">
  <div class="relative z-20 max-w-3xl mx-auto px-4">

    <!-- Titre principal -->
    <h1 class="text-5xl md:text-6xl font-primary text-accent-copper leading-tight mb-6">
      Accélérez votre <span class="font-playfair italic">Croissance</span> avec la <span class="font-bold">Méthode AIA™</span>
    </h1>

    <!-- Sous-titre inspirant -->
    <h2 class="text-3xl md:text-4xl font-primary text-accent-copper leading-snug mb-8">
      Alignez, Attirez, Automatisez pour <span class="font-playfair italic">scaler votre business</span>.
    </h2>

    <!-- Call to action -->
    <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-x-6 sm:space-y-0 mt-8">
      <a href="/about" class="btn-blue-primary btn-medium">En savoir plus</a>
      <a href="https://TON-LIEN-CALENDLY-OU-AUTRE" target="_blank" rel="noopener noreferrer" class="btn-blue-secondary btn-medium">Réserver un appel découverte</a>
    </div>

  </div>

</BaseLayout>
